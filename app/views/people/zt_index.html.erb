<%= search_form_for @q do |f| %>

  <%= f.label :name_or_profession_cont %>
  <%= f.search_field :name_or_profession_cont %>
  
  <%= f.submit %>
<% end %>

<h2>Result</h2>  
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profession</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td>
          <%= person.name %>
        </td>
        <td>
          <%= person.profession %>
        </td>
       </tr>
    <% end %>
  </tbody>
</table>
