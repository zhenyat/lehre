%h1.title
  = "#{@entry.art}" if @entry.art != 'Null'
  = "#{ @entry.de}"
  = "[#{ @entry.trxn}]" if @entry.trxn.present?
%table.table.table-hover
  %thead
    %th= 'Deutsch'
    %th= 'Russisch'
    %th= 'Englis—Åh'
    %th= 'Teil der Rede'

  %tbody.personalpronoun
    %td= @entry.de
    %td= @entry.ru
    %td= @entry.en
    %td= @entry.pos

- if  @entry.samples.present?
  %h4.italic Beispiele
  %table.table.table-hover
    -  @entry.samples.each do |sample|
      %tbody
        %td.strong= sample.de
        %td= sample.ru
        %td= sample.en

.row
  .col-md-2
    = link_to edit_entry_path, class: "btn btn-info" do 
      = fa_icon "edit"
      = "Bearbeiten"
  .col-md-2
    = link_to entries_path, class: "btn btn-info" do 
      = fa_icon "list"
      = "Liste"
