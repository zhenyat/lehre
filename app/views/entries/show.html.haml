%h1.title
  = "#{@entry.art}" if @entry.art != 'Null'
  = "#{ @entry.de}"
  = "[#{ @entry.trxn}]" if @entry.trxn.present?
%table.table.table-hover
  %thead
    %th= 'Deutsch'
    %th= 'Russisch'
    %th= 'Englis—Åh'
    %th= 'Teil der Rede'

  %tbody.personalpronoun
    %tr
      %td= @entry.de
      %td= @entry.ru
      %td= @entry.en
      %td= @entry.pos

  .col-md-12.comment
    = @entry.comment if @entry.comment.present?

- if  @entry.samples.present?
  %h4.italic Beispiele
  %table.table.table-hover
    -  @entry.samples.each do |sample|
      %tbody
        %td.font-weight-bold= sample.de
        %td= sample.ru
        %td= sample.en

.row
  .col-md-2
    = link_to edit_entry_path, class: "btn btn-primary" do 
      = fa_icon "edit"
      = "Bearbeiten"
  .col-md-2
    = link_to entries_path, class: "btn btn-info" do 
      = fa_icon "list"
      = "Liste"
  .col-md-2
    = link_to new_entry_path, class: "btn btn-dark" do
      = fa_icon "plus-square 1x"
      = "Neu"