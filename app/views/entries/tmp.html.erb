<% if flash[:notice] %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times</button>
    <%= flash[:notice] %>
  </div>
<% elsif flash[:error] %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times</button>
    <%= flash[:error] %>
  </div>
<% else %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times</button>
    <%= flash[:error] %>
  </div>
<% end %>




