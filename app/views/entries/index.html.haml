.row
  .col-md-8
    %h1 Einträge auflisten (Listing entries)
  .col-md-2
    = link_to new_entry_path, class: "btn btn-dark" do
      = fa_icon "plus-square 1x"
      = "Neu"
 
= search_form_for @q do |f|
  /= f.label :de_or_en_or_ru_cont
  = f.search_field :de_or_en_or_ru_cont
  = f.submit 'suchen'


= display_entries_table(                                 |
  [                                                       |
    { :name => 'de',  :display_name => 'Deutsch' },       |
    { :name => 'en',  :display_name => 'Englisсh' },      |
    { :name => 'ru',  :display_name => 'Russisch' },      |
    { :name => 'pos', :display_name => 'Teil der Rede' }  |
  ],                                                      |
  @entries)                                               |
.col-md-2
  = link_to new_entry_path, class: "btn btn-dark" do
    = fa_icon "plus-square 1x"
    = "Neu"